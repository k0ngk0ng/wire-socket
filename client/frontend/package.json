{
  "name": "wire-socket",
  "version": "1.0.0",
  "description": "Cross-platform VPN client with WireGuard over WebSocket tunneling",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "prepare": "./scripts/prepare-package.sh",
    "build": "npm run prepare && electron-builder",
    "build:mac": "npm run prepare && electron-builder --mac",
    "build:win": "npm run prepare && electron-builder --win",
    "build:linux": "npm run prepare && electron-builder --linux"
  },
  "keywords": [
    "vpn",
    "wireguard",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "keytar": "^7.9.0",
    "electron-store": "^8.1.0",
    "auto-launch": "^5.0.6"
  },
  "build": {
    "appId": "com.wiresocket.app",
    "productName": "WireSocket",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "!resources/bin/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/${os}",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "binaries": [
        "resources/bin/darwin/wire-socket-client",
        "resources/bin/darwin/wire-socket-client-arm64",
        "resources/bin/darwin/wstunnel",
        "resources/bin/darwin/wstunnel-arm64",
        "resources/bin/darwin/wireguard-go",
        "resources/bin/darwin/wireguard-go-arm64"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WireSocket",
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "public/icon.png",
      "category": "Network",
      "maintainer": "WireSocket Team",
      "synopsis": "Cross-platform VPN client with WireGuard"
    },
    "deb": {
      "depends": [
        "libappindicator3-1"
      ],
      "afterInstall": "build/linux-post-install.sh"
    },
    "rpm": {
      "depends": [
        "libappindicator-gtk3"
      ],
      "afterInstall": "build/linux-post-install.sh"
    }
  }
}
