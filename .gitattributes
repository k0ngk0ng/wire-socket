# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Go files
*.go text eol=lf
go.mod text eol=lf
go.sum text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Markdown
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.icns binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.db binary
*.sqlite binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
